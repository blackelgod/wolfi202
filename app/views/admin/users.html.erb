<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <div class="forms">
        <h2 class="text-center mt-3">Utilisateurs</h2>
          <%= form_tag @admin_logs_path, method: :get do %>
            <%= text_field_tag :query, params[:query], placeholder: "Rechercher...", class: "form-control"%>
              <br>
            <%= submit_tag "Chercher", class: "btn btn-success text-white" %>
          <% end %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">Pseudo</th>
              <th scope="col">Email</th>
              <th scope="col">Validation</th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= user.valided? ? "oui" : "non" %></td>
              <%= link_to "edit", admin_edit_user_path(user) %>
            </tr>
          <% end %>
          </tbody>
        </table>
        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>
